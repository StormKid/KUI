<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KuiToolBar">
        <attr name="image_dimen" format="dimension"/>
        <attr name="left_image_icon" format="reference"/>
        <attr name="left_icon_color" format="reference"/>
        <attr name="right_image_icon" format="reference"/>
        <attr name="right_icon_color" format="reference"/>
        <attr name="is_nav_bar" format="boolean"/>
        <attr name="is_right_text" format="boolean"/>
        <attr name="title_text" format="string"/>
        <attr name="title_size" format="dimension"/>
        <attr name="title_color" format="color"/>
        <attr name="title_gravity" format="enum">
            <enum name="CENTER" value="0"/>
            <enum name="LEFT" value="1"/>
            <enum name="RIGHT" value="2"/>
        </attr>
        <attr name="content_color" format="color"/>
        <attr name="content_text" format="string"/>
        <attr name="content_size" format="dimension"/>
        <attr name="toolbar_ripple_color" format="color" />
    </declare-styleable>

    <declare-styleable name="KuiButton">
        <attr name="icon_dimen" format="dimension"/>
        <attr name="icon_res" format="reference"/>
        <attr name="icon_color" format="reference"/>
        <attr name="icon_gravity" format="enum">
            <enum name="TOP" value="0"/>
            <enum name="LEFT" value="1"/>
            <enum name="RIGHT" value="2"/>
            <enum name="BOTTOM" value="3"/>
        </attr>
        <attr name="text" format="string"/>
        <attr name="text_dimen" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="bg_drawable" format="enum">
            <enum name="radius" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="ignore_padding" format="boolean"/>
        <attr name="bg_color" format="color"/>
        <attr name="is_stroke" format="boolean"/>
        <attr name="bg_radius" format="dimension"/>
        <attr name="is_show_ripple" format="boolean"/>
        <attr name="button_ripple_color" format="color"/>
        <attr name="button_text_gravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="KuiBadge">
        <attr name="bg_style" format="enum">
            <enum name="radius" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="badge_stroked" format="boolean"/>
        <attr name="is_dragging" format="boolean"/>
        <attr name="badge_radius" format="dimension"/>
        <attr name="badge_bgColor" format="reference"/>
    </declare-styleable>

    <declare-styleable name="KuiCard">
        <attr name="card_radius" format="dimension"/>
        <attr name="card_bg" format="color"/>
        <attr name="card_shade" format="color"/>
        <attr name="is_card_button" format="boolean"/>
        <attr name="evel" format="dimension"/>
        <attr name="shape_mode" format="enum">
             <enum name="LEFT_AND_TOP" value="0"/>
             <enum name="LEFT_AND_BOTTOM" value="1"/>
             <enum name="RIGHT_AND_TOP" value="2"/>
             <enum name="RIGHT_AND_BOTTOM" value="3"/>
             <enum name="ALL" value="4"/>
        </attr>
    </declare-styleable>
</resources>